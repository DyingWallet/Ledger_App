<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/polygon_bg"
    tools:context=".activity.PushDataPage">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/pusher_top_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/picaPink"
        app:itemIconTint="@color/icon_sel"
        app:itemTextColor="@color/text_sel"
        app:menu="@menu/pusher_menu" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_Pusher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

</LinearLayout>